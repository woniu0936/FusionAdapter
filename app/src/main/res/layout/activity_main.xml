<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fusion.example.MainActivity">

    <Button
        android:id="@+id/btn_core_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="CoreManualActivity" />

    <Button
        android:id="@+id/btn_core_diff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="CoreDiffActivity" />

    <Button
        android:id="@+id/btn_core_router"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="CoreRouterActivity" />

    <Button
        android:id="@+id/btn_ktx_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="KtxManualActivity" />

    <Button
        android:id="@+id/btn_ktx_diff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="KtxDiffActivity" />

    <Button
        android:id="@+id/btn_ktx_router"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="KtxRouterActivity" />

    <Button
        android:id="@+id/btn_java_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="JavaDemoActivity" />

    <Button
        android:id="@+id/btn_paging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="PagingDemoActivity" />


</androidx.appcompat.widget.LinearLayoutCompat>